<Window x:Class="FFA_Clustering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FFA Clustering" Height="350" Width="525" WindowStartupLocation="CenterScreen" MinWidth="1280" MinHeight="720" WindowState="Maximized" PreviewKeyDown="Window_PreviewKeyDown">
    <Grid x:Name="MainGrid">
        <Canvas x:Name="CanvasMain" Margin="190,35,10,34" Background="#FFF5EDED" MouseUp="CanvasMain_MouseUp"/>
        <Button x:Name="ButtonDrawPoints" Content="Draw points" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="110" Click="ButtonDrawPoints_Click" IsDefault="True"/>
        <GroupBox x:Name="GroupBoxDrawPoints" Header="Draw points properties" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Height="190" Width="175" BorderThickness="2" SizeChanged="GroupBoxDrawPoints_SizeChanged">
            <Grid Margin="0,10,-2,3">
                <TextBox x:Name="TextBoxPointsPerClick" HorizontalAlignment="Left" Height="23" Margin="10,27,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="90" PreviewTextInput="CheckTextForInt"/>
                <TextBox x:Name="TextBoxDispersion" HorizontalAlignment="Left" Height="23" Margin="10,81,0,0" TextWrapping="Wrap" Text="200" VerticalAlignment="Top" Width="90" PreviewTextInput="CheckTextForInt"/>
                <Label x:Name="LabelPointsPerClick" Content="Points per click" HorizontalAlignment="Left" Margin="10,1,0,0" VerticalAlignment="Top" Width="90"/>
                <Label x:Name="LabelDispersion" Content="Dispersion" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="90"/>
                <RadioButton x:Name="RadioButtonDispersionAsCircle" Content="Dispersion as circle" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top" IsChecked="True"/>
                <RadioButton x:Name="RadioButtonDispersionAsSquare" Content="Dispersion as square" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Grid x:Name="BottomGrid" HorizontalAlignment="Left" Height="255" Margin="0,255,0,0" VerticalAlignment="Top" Width="190">
            <Button x:Name="ButtonClear" Content="Clear" HorizontalAlignment="Left" Margin="10,0,0,0" Width="110" Height="20" VerticalAlignment="Top" Click="ButtonClear_Click"/>
            <Button x:Name="ButtonMakeClusters" Content="Make clusters" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="110" Click="ButtonMakeClusters_Click"/>
            <TextBox x:Name="TextBoxClustersNumber" HorizontalAlignment="Left" Height="23" Margin="10,50,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="120" PreviewTextInput="CheckTextForInt"/>
            <TextBox x:Name="TextBoxSilhouetteMethod" HorizontalAlignment="Left" Height="23" Margin="10,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="ButtonRun" Content="Run" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" Width="110" Click="ButtonRun_Click"/>
            <Label x:Name="LabelSilhouetteMethod" Content="Silhouette Method" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBoxSumOfSquaredError" HorizontalAlignment="Left" Height="23" Margin="11,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label x:Name="LabelSumOfSquaredError" Content="Sum of Squared Error" HorizontalAlignment="Left" Margin="11,153,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Menu Height="20" VerticalAlignment="Top" Background="White">
            <MenuItem Header="File">
                <MenuItem x:Name="MenuItemSave" Header="Save" Click="MenuItemSave_Click" IsEnabled="{DynamicResource IsMenuItemSaveEnabled}"/>
                <MenuItem x:Name="MenuItemOpen" Header="Open" Click="MenuItemOpen_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar Height="29" VerticalAlignment="Bottom" Background="#FF007ACC">
            <ProgressBar x:Name="ProgressBarInfo" Height="14" Width="292" Background="#FF007ACC" BorderBrush="{x:Null}"/>
            <Label x:Name="LabelInfo" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Width="265" VerticalContentAlignment="Center" Foreground="White"/>

        </StatusBar>

    </Grid>
</Window>
